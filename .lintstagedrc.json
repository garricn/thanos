{
  "*.{js,jsx,ts,tsx}": [
    "eslint --fix",
    "prettier --write"
  ],
  "*.{json,md}": [
    "prettier --write"
  ],
  "*.{yml,yaml}": [
    "npx yaml-lint -c .yaml-lint.json",
    "prettier --write"
  ],
  "*.md": [
    "markdownlint-cli2 --fix"
  ],
  "*.sh": [
    "shellcheck",
    "shfmt -i 2 -ci -w"
  ],
  "*": [
    "bash -c 'if file \"$1\" | grep -q \"text\"; then if [ -s \"$1\" ] && [ \"$(tail -c 1 \"$1\" | xxd -p)\" != \"0a\" ]; then echo \"\" >> \"$1\"; fi; fi' --"
  ]
}
