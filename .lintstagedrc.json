{
  "*.{js,jsx,ts,tsx}": [
    "eslint --fix",
    "prettier --write"
  ],
  "*.{json,md}": [
    "prettier --write"
  ],
  "*.{yml,yaml}": [
    "npx yaml-lint -c .yaml-lint.json",
    "prettier --write"
  ],
  "*.md": [
    "markdownlint-cli2 --fix"
  ],
  "*.sh": [
    "shellcheck",
    "shfmt -i 2 -ci -w"
  ]
} 