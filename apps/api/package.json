{
  "name": "@thanos/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,js,mjs --exec 'npx tsx --tsconfig ./tsconfig.json src/main.ts'",
    "build": "node build.js",
    "start": "node dist/index.js",
    "test": "vitest run --config configs/test/vitest.config.ts --dir tests",
    "test:coverage": "vitest run --coverage --config configs/test/vitest.config.ts --dir tests",
    "lint": "eslint --config configs/lint/eslint.config.mjs .",
    "typecheck": "tsc --noEmit --project ./tsconfig.json"
  },
  "dependencies": {
    "express": "^4.19.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "esbuild": "^0.19.12",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "typescript": "~5.7.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "18.16.9",
    "@types/supertest": "^6.0.2",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "nodemon": "^3.0.1"
  }
}
