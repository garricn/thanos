{
  "name": "@thanos/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,js,mjs --exec 'npx tsx --tsconfig ./tsconfig.json src/main.ts'",
    "build": "node build.js",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit --project ./tsconfig.json"
  },
  "dependencies": {
    "express": "^4.19.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "18.16.9",
    "@types/supertest": "^6.0.2",
    "esbuild": "^0.19.12",
    "eslint": "^9.0.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.0.0",
    "ts-node": "10.9.1",
    "typescript": "~5.7.2",
    "vitest": "^3.0.9"
  }
}
