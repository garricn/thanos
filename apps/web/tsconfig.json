{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/web",
    "jsx": "react-jsx",
    "types": ["node", "vitest/globals", "cypress"],
    "typeRoots": ["../../node_modules/@types", "../../node_modules"],
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true
