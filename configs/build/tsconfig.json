{
  "compilerOptions": {
    "rootDir": "../..",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "../..",
    "paths": {
      "@thanos/api/*": ["apps/api/*"],
      "@thanos/web/*": ["apps/web/*"]
    },
    "jsx": "react-jsx",
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node"],
    "typeRoots": ["../../node_modules/@types", "../../types"],
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "files": [],
  "include": [],
  "compileOnSave": false,
  "exclude": ["node_modules", "tmp"]
}
