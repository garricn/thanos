{
  "name": "thanos",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": "22"
  },
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "act": "node scripts/bin/act.js",
    "build": "npm run build --workspace=apps/api && npm run build --workspace=apps/web",
    "check": "npm-run-all node:version format --parallel lint type-check security:check check:deps --serial test",
    "check:deps": "npm ci --dry-run && npm ls --depth=0",
    "check:outdated": "npm outdated || true",
    "clean": "rm -rf dist apps/*/dist tmp node_modules/.cache",
    "clean:deep": "node scripts/bin/clean-deep.js",
    "coverage:combine": "npm-run-all coverage:combine:clear coverage:combine:lcov coverage:combine:html",
    "coverage:combine:clear": "rm -rf coverage/combined",
    "coverage:combine:lcov": "mkdir -p coverage/combined && lcov --add-tracefile \"coverage/{api,web,scripts}/lcov.info\" --output-file coverage/combined/lcov.info",
    "coverage:combine:html": "genhtml coverage/combined/lcov.info --output-directory coverage/combined/lcov-report",
    "coverage:combine:json": "lcov --summary coverage/combined/lcov.info --output-file coverage/combined/coverage-final.json",
    "coverage:combine:clean": "npm run test:coverage:clean && npm run coverage:combine",
    "fix-node-version": "echo 'To switch to Node.js '$(node -e 'console.log(require(\"./package.json\").engines.node)')', please run: source scripts/bin/switch-node.js'",
    "format": "prettier --write \"**/*.{js,jsx,mjs,ts,tsx}\" && npm run format:md && npm run format:sh && npm run format:yaml",
    "format:md": "prettier --write \"**/*.md\"",
    "format:sh": "find scripts -name \"*.sh\" -type f -exec shfmt -i 2 -ci -w {} \\; && [ -f ci_helper.sh ] && shfmt -i 2 -ci -w ci_helper.sh || true",
    "format:yaml": "prettier --write \"**/*.{yml,yaml}\"",
    "lint": "npm run lint --workspace=apps/web && npm run lint --workspace=apps/api && npm run lint:md && npm run lint:sh && npm run lint:yaml",
    "lint:md": "markdownlint-cli2 --config .markdownlint-cli2.jsonc \"**/*.md\"",
    "lint:md:fix": "markdownlint-cli2 --config .markdownlint-cli2.jsonc --fix \"**/*.md\"",
    "lint:sh": "find scripts -name \"*.sh\" -type f -exec shellcheck {} \\; && [ -f ci_helper.sh ] && shellcheck ci_helper.sh || true",
    "lint:yaml": "find . -type f \\( -name '*.yml' -o -name '*.yaml' \\) ! -path '*/node_modules/*' -exec yamllint -c .yamllint {} +",
    "node:version": "node scripts/bin/node-version.js",
    "prepare": "[ -n \"$CI\" ] || [ -n \"$HUSKY\" -a \"$HUSKY\" = \"0\" ] || husky",
    "security:check": "snyk test --all-projects",
    "security:fix": "snyk wizard",
    "start": "concurrently --kill-others-on-fail \"npm run start:api\" \"npm run start:web\"",
    "start:api": "npm run dev --workspace=apps/api",
    "start:web": "npm run dev --workspace=apps/web",
    "test": "npm-run-all test:unit test:e2e",
    "test:api": "npm-run-all test:api:unit test:api:e2e",
    "test:api:coverage": "npm run test --workspace=apps/api -- --coverage",
    "test:api:e2e": "npm run test:e2e --workspace=apps/api",
    "test:api:unit": "npm run test --workspace=apps/api",
    "test:coverage": "npm-run-all test:api:coverage test:web:coverage test:scripts:coverage",
    "test:coverage:clean": "rm -rf coverage && npm run test:coverage",
    "test:e2e": "npm-run-all test:api:e2e test:web:e2e",
    "test:scripts": "npm run test:scripts:unit",
    "test:scripts:coverage": "vitest run --config scripts/vitest.config.js --coverage",
    "test:scripts:unit": "vitest run --config scripts/vitest.config.js",
    "test:unit": "npm-run-all test:api:unit test:web:unit test:scripts:unit",
    "test:web": "npm-run-all test:web:unit test:web:e2e",
    "test:web:coverage": "npm run test --workspace=apps/web -- --coverage",
    "test:web:e2e": "npm run test:e2e --workspace=apps/web",
    "test:web:unit": "npm run test --workspace=apps/web",
    "type-check": "npm run typecheck --workspace=apps/web && npm run typecheck --workspace=apps/api",
    "type-check:watch": "npm run typecheck --workspace=apps/web -- --watch",
    "update:deps": "npm audit fix && npm install && git add package.json package-lock.json && git commit -m 'Claude: Update dependencies and sync package-lock.json'",
    "update:deps:force": "npm audit fix --force && npm install && git add package.json package-lock.json && git commit -m 'Claude: Update dependencies with breaking changes and sync package-lock.json'"
  },
  "resolutions": {
    "inflight": "1.0.6"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.2",
    "axios": "^1.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "esbuild": "^0.19.12",
    "eslint": "^9.0.0",
    "express": "^4.19.2",
    "fs-extra": "^11.3.0",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.479.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "shadcn-ui": "^0.9.5",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.0.2",
    "vite": "5.4.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.0.0",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.1.0",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.11",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^3.0.9",
    "@vitest/ui": "^3.0.9",
    "@xmldom/xmldom": "^0.8.10",
    "autoprefixer": "^10.4.20",
    "chalk": "^5.3.0",
    "concurrently": "^9.1.2",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "glob": "^10.4.5",
    "husky": "^9.1.7",
    "inquirer": "^8.2.5",
    "jiti": "2.4.2",
    "jsdom": "~22.1.0",
    "lint-staged": "^15.2.2",
    "markdownlint-cli2": "^0.17.2",
    "nodemon": "^3.1.9",
    "npm-force-resolutions": "^0.0.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "snyk": "^1.1260.0",
    "sonarqube-scanner": "^3.5.0",
    "supertest": "^7.0.0",
    "tailwindcss": "^4.0.12",
    "ts-node": "10.9.1",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.3.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.19.0",
    "vitest": "^3.0.9",
    "vitest-sonar-reporter": "^2.0.0",
    "wait-on": "^8.0.3",
    "yargs": "^17.7.2"
  }
}
