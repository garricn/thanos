{
  "name": "thanos",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "concurrently --kill-others-on-fail \"nx serve api\" \"nx serve web\"",
    "start:api": "nx serve api",
    "start:web": "nx serve web",
    "build": "nx build",
    "test": "nx test",
    "test:all": "nx run-many -t test --projects=web,api && nx run-many -t e2e --projects=web-e2e,api-e2e",
    "test:unit": "nx run-many -t test --projects=web,api",
    "lint:all": "nx run-many -t lint --projects=web,api,web-e2e,api-e2e",
    "lint:md": "markdownlint-cli2 \"**/*.md\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\"",
    "format": "nx format:write",
    "format:md": "prettier --write \"**/*.md\"",
    "clean": "rm -rf dist tmp node_modules/.cache .nx/cache",
    "coverage": "nx run-many -t test --projects=web,api --coverage --coverageReporters=lcov",
    "coverage:report": "nx run-many -t test --projects=web,api --coverage --coverageReporters=text-summary,html,lcov",
    "prepare": "[ -n \"$CI\" ] || [ -n \"$HUSKY\" -a \"$HUSKY\" = \"0\" ] || husky",
    "pre-commit": "lint-staged",
    "security:check": "snyk test",
    "security:fix": "snyk wizard",
    "update:deps": "npm audit fix && npm install && git add package.json package-lock.json && git commit -m 'Claude: Update dependencies and sync package-lock.json'",
    "update:deps:force": "npm audit fix --force && npm install && git add package.json package-lock.json && git commit -m 'Claude: Update dependencies with breaking changes and sync package-lock.json'",
    "sonar": "sonar-scanner -Dsonar.host.url=https://sonarcloud.io",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "validate": "npm-run-all --parallel lint:all test:unit coverage type-check",
    "validate:full": "npm-run-all --parallel lint:all test:all coverage type-check security:check"
  },
  "nx": {
    "includedScripts": []
  },
  "dependencies": {
    "@nx/esbuild": "20.5.0",
    "@radix-ui/react-slot": "^1.1.2",
    "axios": "^1.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cypress": "^13.6.6",
    "esbuild": "^0.19.12",
    "eslint": "^8.57.0",
    "express": "^4.19.2",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.479.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "shadcn-ui": "^0.9.5",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.0.2",
    "vite": "5.1.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nx/cypress": "20.5.0",
    "@nx/eslint": "20.5.0",
    "@nx/eslint-plugin": "20.5.0",
    "@nx/jest": "20.5.0",
    "@nx/js": "20.5.0",
    "@nx/node": "^20.5.0",
    "@nx/react": "^20.5.0",
    "@nx/vite": "20.5.0",
    "@nx/web": "20.5.0",
    "@nx/workspace": "20.5.0",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@tailwindcss/postcss": "^4.0.12",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "16.1.0",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "18.16.9",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@types/supertest": "^6.0.2",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^3.0.0",
    "autoprefixer": "^10.4.20",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.1.2",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-cypress": "^3.5.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.1",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "5.0.0",
    "fs-extra": "^11.3.0",
    "glob": "^10.4.5",
