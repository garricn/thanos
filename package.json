    "jiti": "2.4.2",
    "jsdom": "~22.1.0",
    "lint-staged": "^15.2.2",
    "markdownlint-cli2": "^0.17.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "prettier": "^2.6.2",
    "snyk": "^1.1260.0",
    "sonarqube-scanner": "^3.5.0",
    "supertest": "^7.0.0",
